# Railway Environment Configuration
# Copy this to .env for local development with Railway settings

# Application
NODE_ENV=production
PORT=8001

# Database (Railway will provide DATABASE_URL for PostgreSQL)
# For local development with Postgres:
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=postgresql://trading:trading@localhost:5432/tradingbot

# Redis (Railway will provide REDIS_URL)
# For local development:
REDIS_URL=redis://localhost:6379

# Frontend URL (update with your actual Railway URL)
FRONTEND_URL=https://your-app.railway.app
REACT_APP_API_URL=https://your-api.railway.app

# Trading Bot Configuration
TRADING_MODE=paper
LOG_LEVEL=info

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# API Keys (add your actual keys)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key
