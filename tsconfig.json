{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@strategies/*": ["strategies/*"]
    }
  },
  "include": ["src/*", "api/*"],
  "exclude": ["node_modules", "dist", "client/*"]
}
